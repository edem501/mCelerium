@model iCelerium.Models.DashboardViewModel

@{
    ViewBag.Title = "Dashboard";
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>
<script src="~/Scripts/jquery-ui.unobtrusive-2.2.0.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>



}

 
        <h3><i class="fa fa-dashboard"></i>Dashboard</h3>

        <hr>


        <div class="row">
            <!-- center left-->
            <div class="col-md-6">
                <a href='@Url.Action("TransChart", "Home")'>
                    <div class="panel panel-default">
                        @*<div class="panel-heading"><h4>Processing Status</h4></div>*@
                        <div class="panel-body">
                            <div id="refresh1">
                            @Html.Partial("_TransDaily", Model.Chart1)
                        </div>
                        </div><!--/panel-body-->
                    </div><!--/panel-->
                </a>
            </div><!--/col-->
            <!--center-right-->
            <div class="col-md-6">
                <a href='@Url.Action("PieChart", "Home")'>
                    <div class="panel panel-default">
                        @*<div class="panel-heading"><h4>Processing Status</h4></div>*@
                        <div class="panel-body">
                            <div id="refresh">
                                @Html.Partial("_PieChart", Model.Chart2)
                            </div>
                        </div><!--/panel-body-->
                    </div><!--/panel-->
                </a>
            </div><!--/col-span-6-->

        </div><!--/row-->
<div class="row">
    <table class="table table-striped">
        <thead style=" font-weight:bold">
            <tr>
                <td style="background-color:lightgray;">@Html.DisplayNameFor(model => model.Chart3.First().Region)</td>
                <td>@Html.DisplayNameFor(model => model.Chart3.First().NoConstituency)</td>
                <td>@Html.DisplayNameFor(model => model.Chart3.First().NDC)</td>
                <td style="background-color:#837D3C;">@Html.DisplayNameFor(model => model.Chart3.First().NPP)</td>
                <td>@Html.DisplayNameFor(model => model.Chart3.First().CPP)</td>
                <td>@Html.DisplayNameFor(model => model.Chart3.First().PPP)</td>
                <td>@Html.DisplayNameFor(model => model.Chart3.First().OTHERS)</td>
                <td>@Html.DisplayNameFor(model => model.Chart3.First().REJECTED)</td>
                <td>@Html.DisplayNameFor(model => model.Chart3.First().TOTAL)</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Chart3)
            {
                <tr>
                    
                        <td style="background-color:lightcoral; color:white;"><a style="text-decoration:none;color:white;" href='@Url.Action("VoteRegional", "Votes", new { RegionName = item.Region })'>@Html.DisplayFor(itemmodel => item.Region)</a></td>
               
                        <td>@Html.DisplayFor(itemmodel => item.NoConstituency)</td>
                        <td>@Html.DisplayFor(itemmodel => item.NDC)</td>
                        <td style="background-color:#CFCCA3;">@Html.DisplayFor(itemmodel => item.NPP)</td>
                        <td>@Html.DisplayFor(itemmodel => item.CPP)</td>
                        <td>@Html.DisplayFor(itemmodel => item.PPP)</td>
                        <td>@Html.DisplayFor(itemmodel => item.OTHERS)</td>
                        <td>@Html.DisplayFor(itemmodel => item.REJECTED)</td>
                        <td>@Html.DisplayFor(itemmodel => item.TOTAL)</td>

</tr>
            }
        </tbody>
        <tfoot style=" font-weight:bold;color:lightcoral;border-bottom:solid;">
            <tr>
                <td></td>
                <td>@ViewBag.SumCons</td>
                <td>@ViewBag.SumNDC</td>
                <td>@ViewBag.SumNPP</td>
                <td>@ViewBag.SumCPP</td>
                <td>@ViewBag.SumPPP</td>
                <td>@ViewBag.SumOTHERS</td>
                <td>@ViewBag.REJECTED</td>
                <td>@ViewBag.SumTOTAL</td>
            </tr>
        </tfoot>
    </table>
</div>

