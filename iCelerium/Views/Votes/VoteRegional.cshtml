@model iCelerium.Models.RegionDashboardViewModel
@{
    ViewBag.Title = String.Format("Vote collation overview in the {0}",ViewBag.Reg);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>
    <script src="~/Scripts/jquery-ui.unobtrusive-2.2.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>



}


    <h3><i class="fa fa-user"></i>@ViewBag.Reg</h3>
    <hr />
<div >
    
</div>
<div class="row">
    <!-- center left-->
    <div class="col-md-6">
        <a href='@Url.Action("TransChart", "Home")'>
            <div class="panel panel-default">
                @*<div class="panel-heading"><h4>Processing Status</h4></div>*@
                <div class="panel-body">
                    <div id="refresh1">
                        @Html.Partial("_TransDaily", Model.Chart1)
                    </div>
                </div><!--/panel-body-->
            </div><!--/panel-->
        </a>
    </div><!--/col-->
    <!--center-right-->
    <div class="col-md-6">
        <a href='@Url.Action("PieChart", "Home")'>
            <div class="panel panel-default">
                @*<div class="panel-heading"><h4>Processing Status</h4></div>*@
                <div class="panel-body">
                    <div id="refresh">
                        @Html.Partial("_PieChart", Model.Chart2)
                    </div>
                </div><!--/panel-body-->
            </div><!--/panel-->
        </a>
    </div><!--/col-span-6-->

</div><!--/row-->
<div class="row">
    <div>
        <table class="table table-striped">
            <thead style=" font-weight:bold">
                <tr>
                    <td style="background-color:lightgray;">CONSTITUENCY</td>
                    <td style="background-color:#837D3C;">@Html.DisplayNameFor(model => model.Chart3.FirstOrDefault().NDC)</td>
                    <td>@Html.DisplayNameFor(model => model.Chart3.FirstOrDefault().NPP)</td>
                    <td>@Html.DisplayNameFor(model => model.Chart3.FirstOrDefault().CPP)</td>
                    <td>@Html.DisplayNameFor(model => model.Chart3.FirstOrDefault().PPP)</td>
                    <td>@Html.DisplayNameFor(model => model.Chart3.FirstOrDefault().OTHERS)</td>
                    <td>@Html.DisplayNameFor(model => model.Chart3.FirstOrDefault().REJECTED)</td>
                    <td>@Html.DisplayNameFor(model => model.Chart3.FirstOrDefault().TOTAL)</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Chart3)
                {
                    <tr>

                        <td style="background-color:lightcoral; color:white;"><a style="text-decoration:none;color:white;" href='@Url.Action("Index", "Pollings", new { Polling = item.ConstituencyID })'>@Html.DisplayFor(itemModel => item.ConstituencyID)</a></td>
                        <td style="background-color:#CFCCA3;">@Html.DisplayFor(itemModel => item.NDC)</td>
                        <td>@Html.DisplayFor(itemModel => item.NPP)</td>
                        <td>@Html.DisplayFor(itemModel => item.CPP)</td>
                        <td>@Html.DisplayFor(itemModel => item.PPP)</td>
                        <td>@Html.DisplayFor(itemModel => item.OTHERS)</td>
                        <td>@Html.DisplayFor(itemModel => item.REJECTED)</td>
                        <td>@Html.DisplayFor(itemModel => item.TOTAL)</td>
                    </tr>
                }

            </tbody>
